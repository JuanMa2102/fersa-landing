---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import AboutCard from '~/components/widgets/AboutCard.astro';

const metadata = {
  title: 'Fersa — Ferremotobombas',
  ignoreTitleTemplate: true,
};

const getUrlWhatsapp = (phoneNumber: string, message: string) => {
  return `https://api.whatsapp.com/send?phone=${phoneNumber}&text=${message}`;
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Catalogo',
        href: 'https://drive.google.com/file/d/1Tu_eAz2uSg2zPNyt_UluoU3W6KMNk9wm/view',
        target: '_blank',
        icon: 'tabler:download',
      },
      { text: 'Sucursales', href: '#sucursales' },
    ]}
    image={{ src: '~/assets/images/fersa-chair.png', alt: 'Aberlin imagen' }}
  >
    <Fragment slot="title">
      Impulsa tu productividad, <span class=""> el equipo que buscas</span>
      <span class="text-primary dark:text-secondary"> está en FERSA</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Fersa</span> cuenta con más de <span class="inline mb-1 font-bold"
          >30 años de experiencia</span
        >, ofrecemos equipos forestales, agrícolas y de jardinería de marcas líderes,</span
      >
      garantizando calidad, servicio especializado y las mejores soluciones para impulsar tu productividad
    </Fragment>
  </Hero>

  <Features
    id="services"
    tagline="Servicios"
    title="Nuestros servicios"
    subtitle=""
    items={[
      {
        title: 'Venta de Equipos y Refacciones',
        description:
          'Ofrecemos una amplia gama de equipos forestales, agrícolas y de jardinería de las marcas más confiables del mercado. Además, contamos con refacciones originales para garantizar el óptimo funcionamiento de tus equipos.',
        icon: 'tabler:currency-dollar',
      },
      {
        title: 'Mantenimiento Preventivo y Correctivo',
        description:
          'Visita nuestro Taller Mecánico Especializado, donde brindamos servicio de mantenimiento preventivo y correctivo para mantener tus equipos en perfecto estado. Nuestro equipo de expertos se asegura de que tu maquinaria esté siempre lista para el trabajo, aumentando su vida útil y rendimiento.',
        icon: 'tabler:tool',
      },
    ]}
  />

  <!-- Steps Widget ****************** -->
  <div class="grid mx-auto gap-8 md:gap-y-12 sm:grid-cols-2 px-4 md:px-6 max-w-5xl">
    <Steps
      id="sucursales"
      title="Ubicación de nuestras sucursales"
      items={[
        {
